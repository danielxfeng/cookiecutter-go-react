{
  "name": "{{ cookiecutter.project_slug }}",
  "version": "1.0.0",
  "description": "{{ cookiecutter.description }}",
  "main": "index.js",
  "scripts": {
    "test": "pnpm -r run test",
    "precommit": "pnpm -r run precommit",
    "dev": "pnpm -r run dev",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "{{ cookiecutter.author_name }}",
  "license": "{{ cookiecutter.license }}",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,js,json,md,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ],
    "apps/backend-go/**/*.go": [
      "cd apps/backend-go && golangci-lint run --fix",
      "cd apps/backend-go && gofmt -w ."
    ]
  }
}
